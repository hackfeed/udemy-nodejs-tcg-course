extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action="/admin/" + (editing === "true" ? "edit-product" : "add-product"), method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=(editing === "true" ? product.title : ""))#title
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", value=(editing === "true" ? product.imageUrl : ""))#imageUrl
            .form-control
                label(for="price") Price
                input(type="number", name="price", step="0.01", value=(editing === "true" ? product.price : ""))#price
            .form-control
                label(for="description") Description
                textarea(name="description", rows=5)#description #{editing === "true" ? product.description : ""}
                button.btn(type="submit") #{editing === "true" ? "Update product" : "Add product"}
            if editing
                input(type="hidden", value=product.id, name="productId")
